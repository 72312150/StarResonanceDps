<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">


    <!--  Import System.Double for numeric resources  -->
    <sys:Double x:Key="MainCornerRadiusDouble">6</sys:Double>

    <!--  Corner radius resource (identical radius for all corners)  -->
    <CornerRadius x:Key="MainCornerRadius">6,6,6,6</CornerRadius>

    <sys:Double x:Key="CardHeaderHeight">25</sys:Double>

    <sys:Double x:Key="{x:Static SystemParameters.VerticalScrollBarWidthKey}">10</sys:Double>

    <sys:Double x:Key="{x:Static SystemParameters.HorizontalScrollBarHeightKey}">10</sys:Double>


    <!--  Window style: borderless transparent window  -->
    <Style x:Key="TransparentWindow" TargetType="Window">
        <!--  Enable per-pixel transparency  -->
        <Setter Property="AllowsTransparency" Value="True" />
        <!--  Remove system chrome (no title bar, no border)  -->
        <Setter Property="WindowStyle" Value="None" />
        <!--  Make the window background fully transparent (for custom chrome)  -->
        <Setter Property="Background" Value="Transparent" />

        <!--  Force layout rounding and pixel snapping  -->
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
    </Style>

    <!--  Alternative transparent window style with better performance  -->
    <!--  https://blog.walterlv.com/post/wpf-transparent-window-without-allows-transparency.html  -->
    <Style x:Key="TransparentWindowAlt" TargetType="Window">
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="ResizeMode" Value="NoResize" />
        <Setter Property="WindowChrome.GlassFrameThickness" Value="-1" />
        <!--  Force layout rounding and pixel snapping  -->
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />

    </Style>

    <!--  Border style: adds padding, rounded corners, and a drop shadow  -->
    <Style x:Key="ShadowWindowBorder" TargetType="Border">
        <!--  Reserve outer margin so the shadow remains visible  -->
        <Setter Property="Margin" Value="5" />
        <!--  Use the shared corner radius resource  -->
        <Setter Property="CornerRadius" Value="{DynamicResource MainCornerRadius}" />
        <!--  Apply DropShadowEffect for a simple shadow  -->
        <Setter Property="Effect">
            <Setter.Value>
                <!--  BlurRadius (blur amount), Opacity (shadow opacity), ShadowDepth (0 = centered diffusion)  -->
                <DropShadowEffect
                    BlurRadius="5"
                    Opacity="0.5"
                    ShadowDepth="0"
                    Color="#000" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="SpliterBase" TargetType="Border">
        <Setter Property="Height" Value="1" />
        <Setter Property="Background" Value="#ECECEC" />
    </Style>

    <Style x:Key="NormalTextBlockBaseStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#HarmonyOS Sans SC" />
    </Style>

    <Style x:Key="CardBorderBaseStyle" TargetType="Border">
        <Setter Property="Padding" Value="20" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="Background" Value="#FFF" />
        <Setter Property="CornerRadius" Value="{StaticResource MainCornerRadius}" />
    </Style>

    <Style
        x:Key="CardHeaderBaseStyle"
        BasedOn="{StaticResource NormalTextBlockBaseStyle}"
        TargetType="TextBlock">
        <Setter Property="Foreground" Value="#2297F4" />
    </Style>
    <Style
        x:Key="CardHeaderMainTitleStyle"
        BasedOn="{StaticResource CardHeaderBaseStyle}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>

    <Style
        x:Key="CardHeaderSubTitleStyle"
        BasedOn="{StaticResource CardHeaderBaseStyle}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="9" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>


    <Style TargetType="GridSplitter">
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
    </Style>

    <!--  Default TextBlock style  -->
    <Style BasedOn="{StaticResource NormalTextBlockBaseStyle}" TargetType="TextBlock" />

    <!--  Default ScrollBar style  -->
    <Style TargetType="ScrollBar">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid Width="8" Background="Transparent">
                        <!--  轨道  -->
                        <Track Name="PART_Track" IsDirectionReversed="true">
                            <Track.Resources>
                                <Style TargetType="RepeatButton">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                    <Setter Property="BorderThickness" Value="0" />
                                </Style>
                            </Track.Resources>
                            <Track.DecreaseRepeatButton>
                                <RepeatButton Command="ScrollBar.LineUpCommand" />
                            </Track.DecreaseRepeatButton>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton Command="ScrollBar.LineDownCommand" />
                            </Track.IncreaseRepeatButton>
                            <!--  滑块  -->
                            <Track.Thumb>
                                <Thumb Background="#888">
                                    <Thumb.Template>
                                        <ControlTemplate TargetType="Thumb">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="4" />
                                        </ControlTemplate>
                                    </Thumb.Template>
                                </Thumb>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>