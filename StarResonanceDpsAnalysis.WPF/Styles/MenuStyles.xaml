<!--  Themes/MenuStyles.xaml  -->
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!--  ===== Colors (use alpha values to avoid dark edges from stacked transparency) =====  -->
    <SolidColorBrush x:Key="MenuBg" Color="#F2FFFFFF" />
    <SolidColorBrush x:Key="MenuFg" Color="#222222" />
    <SolidColorBrush x:Key="MenuHover" Color="#12000000" />
    <SolidColorBrush x:Key="MenuPressed" Color="#1E000000" />
    <SolidColorBrush x:Key="MenuSep" Color="#14000000" />

    <!--  Shadow intensity presets  -->
    <DropShadowEffect
        x:Key="MenuShadow.Light"
        BlurRadius="24"
        Opacity="0.22"
        ShadowDepth="0"
        Color="#33000000" />
    <DropShadowEffect
        x:Key="MenuShadow.Medium"
        BlurRadius="20"
        Opacity="0.30"
        ShadowDepth="0"
        Color="#40000000" />
    <DropShadowEffect
        x:Key="MenuShadow.SoftGlow"
        BlurRadius="28"
        Opacity="0.18"
        ShadowDepth="0"
        Color="#22000000" />

    <!--  ===== Checkmarks / arrows: parameterized resources (change here for global effect) =====  -->
    <!--  ✔ Check glyph (left circle)  -->
    <sys:Double x:Key="Menu.Check.Diameter">16</sys:Double>
    <!--  Check circle diameter (px). Adjust to change circle size.  -->
    <sys:Double x:Key="Menu.Check.FontSize">6</sys:Double>

    <!--  Check glyph font size. Adjust to change glyph size.  -->
    <Thickness x:Key="Menu.Check.GlyphMargin">0,0.0,0,0</Thickness>
    <!--  Glyph offset (left, top, right, bottom). Second value negative = move up; positive = move down. First/third adjust horizontal.  -->
    <SolidColorBrush x:Key="Menu.Check.Bg" Color="#222222" />
    <!--  Background color for the check circle  -->
    <SolidColorBrush x:Key="Menu.Check.Fg" Color="#FFFFFFFF" />
    <!--  Check glyph color  -->
    <sys:String x:Key="Menu.Check.Glyph">✔</sys:String>
    <!--  Check glyph character (can be replaced with ✅, etc.)  -->

    <!--  › Arrow glyph (right circle)  -->
    <sys:Double x:Key="Menu.Arrow.Diameter">16</sys:Double>
    <!--  Arrow circle diameter (px). Adjust to change circle size.  -->
    <sys:Double x:Key="Menu.Arrow.FontSize">16</sys:Double>
    <!--  Arrow glyph font size. Adjust to change arrow size.  -->
    <Thickness x:Key="Menu.Arrow.GlyphMargin">0,0,0,5</Thickness>
    <!--  Arrow glyph offset (left, top, right, bottom). Negative second value = move up; adjust first/third for horizontal tweaks.  -->
    <SolidColorBrush x:Key="Menu.Arrow.Bg" Color="#222222" />
    <!--  Background color for the arrow circle  -->
    <SolidColorBrush x:Key="Menu.Arrow.Fg" Color="#FFFFFFFF" />
    <!--  Arrow glyph color  -->
    <sys:String x:Key="Menu.Arrow.Glyph">›</sys:String>
    <!--  Arrow glyph character (swap to ⟩, ❯, etc. for baseline preference)  -->
    <FontFamily x:Key="Menu.Arrow.FontFamily">Segoe UI</FontFamily>
    <!--  Arrow glyph font family (affects baseline/style)  -->

    <!--  Use a very large corner radius to keep circles perfectly round when width/height match  -->
    <CornerRadius x:Key="Menu.CircleCorner">999</CornerRadius>
    <!--  Corner radius (normally leave oversized)  -->


    <!--  ScrollViewer template without scrollbars  -->
    <ControlTemplate x:Key="NoScrollViewerTemplate" TargetType="ScrollViewer">
        <ScrollContentPresenter />
    </ControlTemplate>

    <!--  ===== ContextMenu chrome: rounded corners + shadow =====  -->
    <Style x:Key="ModernContextMenu" TargetType="ContextMenu">
        <Style.Triggers>
            <EventTrigger RoutedEvent="Opened">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                            From="0"
                            To="1"
                            Duration="0:0:0.2" />
                        <DoubleAnimation
                            Storyboard.TargetProperty="Opacity"
                            From="0"
                            To="1"
                            Duration="0:0:0.2" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
            <EventTrigger RoutedEvent="Closed">
                <BeginStoryboard>
                    <Storyboard>
                        <DoubleAnimation
                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                            From="1"
                            To="0"
                            Duration="0:0:0.2" />
                        <DoubleAnimation
                            Storyboard.TargetProperty="Opacity"
                            From="1"
                            To="0"
                            Duration="0:0:0.2" />
                    </Storyboard>
                </BeginStoryboard>
            </EventTrigger>
        </Style.Triggers>
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="HasDropShadow" Value="False" />
        <Setter Property="RenderTransform">
            <Setter.Value>
                <ScaleTransform ScaleX="1" ScaleY="0" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContextMenu">
                    <Border
                        Padding="12"
                        Background="Transparent"
                        SnapsToDevicePixels="True">
                        <Grid>
                            <!--  Shadow layer  -->
                            <Border
                                Background="{DynamicResource MenuBg}"
                                CornerRadius="12"
                                IsHitTestVisible="False">
                                <Border.Effect>
                                    <StaticResource ResourceKey="MenuShadow.Light" />
                                </Border.Effect>
                            </Border>
                            <!--  Foreground layer  -->
                            <Border
                                Padding="6"
                                Background="{DynamicResource MenuBg}"
                                ClipToBounds="True"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                                <ScrollViewer
                                    Focusable="False"
                                    HorizontalScrollBarVisibility="Disabled"
                                    Template="{StaticResource NoScrollViewerTemplate}"
                                    VerticalScrollBarVisibility="Disabled">
                                    <ItemsPresenter />
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ===== Separator styling =====  -->
    <Style TargetType="Separator">
        <Setter Property="Margin" Value="8,6,8,6" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Separator">
                    <Border Height="1" Background="{DynamicResource MenuSep}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  ===== MenuItem: left check slot / right arrow / rounded hover / optional left icon =====  -->
    <Style x:Key="ModernMenuItem" TargetType="MenuItem">
        <Setter Property="Foreground" Value="{DynamicResource MenuFg}" />
        <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#HarmonyOS Sans SC" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Height" Value="26" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">
                    <Grid Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="26" />
                            <!--  Left: check slot or icon  -->
                            <ColumnDefinition Width="*" />
                            <!--  Center: text  -->
                            <ColumnDefinition Width="22" />
                            <!--  Right: arrow  -->
                        </Grid.ColumnDefinitions>

                        <!--  Hover/pressed background  -->
                        <Border
                            x:Name="Bg"
                            Grid.ColumnSpan="3"
                            Background="Transparent"
                            CornerRadius="10" />

                        <!--  ✔ Check glyph (resource-driven)  -->
                        <Border
                            x:Name="CheckCircle"
                            Grid.Column="0"
                            Width="{DynamicResource Menu.Check.Diameter}"
                            Height="{DynamicResource Menu.Check.Diameter}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="{DynamicResource Menu.Check.Bg}"
                            CornerRadius="{DynamicResource Menu.CircleCorner}"
                            Visibility="Collapsed" />
                        <TextBlock
                            x:Name="CheckGlyph"
                            Grid.Column="0"
                            Margin="{DynamicResource Menu.Check.GlyphMargin}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="{DynamicResource Menu.Check.FontSize}"
                            Foreground="{DynamicResource Menu.Check.Fg}"
                            Text="{DynamicResource Menu.Check.Glyph}"
                            Visibility="Collapsed" />

                        <!--  左侧自定义图标（可选）  -->
                        <ContentPresenter
                            x:Name="LeftIcon"
                            Grid.Column="0"
                            Margin="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            ContentSource="Icon"
                            Visibility="Visible" />

                        <!--  标题  -->
                        <ContentPresenter
                            Grid.Column="1"
                            Margin="0,0,4,0"
                            VerticalAlignment="Center"
                            ContentSource="Header"
                            RecognizesAccessKey="True" />

                        <!--  › 箭头（使用资源）  -->
                        <Border
                            x:Name="ArrowCircle"
                            Grid.Column="2"
                            Width="{DynamicResource Menu.Arrow.Diameter}"
                            Height="{DynamicResource Menu.Arrow.Diameter}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="{DynamicResource Menu.Arrow.Bg}"
                            CornerRadius="{DynamicResource Menu.CircleCorner}"
                            Opacity="0.95"
                            Visibility="Collapsed" />
                        <TextBlock
                            x:Name="ArrowGlyph"
                            Grid.Column="2"
                            Margin="{DynamicResource Menu.Arrow.GlyphMargin}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="{DynamicResource Menu.Arrow.FontFamily}"
                            FontSize="{DynamicResource Menu.Arrow.FontSize}"
                            Foreground="{DynamicResource Menu.Arrow.Fg}"
                            Text="{DynamicResource Menu.Arrow.Glyph}"
                            Visibility="Collapsed" />

                        <!--  子菜单：圆角+投影  -->
                        <Popup
                            x:Name="PART_Popup"
                            AllowsTransparency="True"
                            Focusable="False"
                            HorizontalOffset="4"
                            IsOpen="{TemplateBinding IsSubmenuOpen}"
                            Placement="Right"
                            PopupAnimation="Fade"
                            VerticalOffset="-6">
                            <Border
                                Padding="12"
                                Background="Transparent"
                                SnapsToDevicePixels="True">
                                <Grid>
                                    <!--  阴影层  -->
                                    <Border
                                        Background="{DynamicResource MenuBg}"
                                        CornerRadius="12"
                                        IsHitTestVisible="False">
                                        <Border.Effect>
                                            <StaticResource ResourceKey="MenuShadow.Light" />
                                        </Border.Effect>
                                    </Border>
                                    <!--  Foreground layer  -->
                                    <Border
                                        Padding="6"
                                        Background="{DynamicResource MenuBg}"
                                        ClipToBounds="True"
                                        CornerRadius="12"
                                        SnapsToDevicePixels="True">
                                        <ScrollViewer
                                            Focusable="False"
                                            HorizontalScrollBarVisibility="Disabled"
                                            Template="{StaticResource NoScrollViewerTemplate}"
                                            VerticalScrollBarVisibility="Disabled">
                                            <ItemsPresenter />
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Border>
                        </Popup>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="Bg" Property="Background" Value="{DynamicResource MenuHover}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bg" Property="Background" Value="{DynamicResource MenuPressed}" />
                        </Trigger>

                        <!--  Collapse when no icon is provided  -->
                        <DataTrigger Binding="{Binding Icon, RelativeSource={RelativeSource TemplatedParent}}" Value="{x:Null}">
                            <Setter TargetName="LeftIcon" Property="Visibility" Value="Collapsed" />
                        </DataTrigger>

                        <!--  Show the check circle/glyph only when checked, and hide the left icon  -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="LeftIcon" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="CheckCircle" Property="Visibility" Value="Visible" />
                            <Setter TargetName="CheckGlyph" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <Trigger Property="HasItems" Value="True">
                            <Setter TargetName="ArrowCircle" Property="Visibility" Value="Visible" />
                            <Setter TargetName="ArrowGlyph" Property="Visibility" Value="Visible" />
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--  Style enabling checkable MenuItems (unchecked by default)  -->
    <Style
        x:Key="CheckableMenuItem"
        BasedOn="{StaticResource ModernMenuItem}"
        TargetType="MenuItem">
        <Setter Property="IsCheckable" Value="True" />
        <!--  Uncomment to keep the menu open after clicking (useful for toggle-style items)  -->
        <Setter Property="StaysOpenOnClick" Value="True" />
    </Style>

</ResourceDictionary>