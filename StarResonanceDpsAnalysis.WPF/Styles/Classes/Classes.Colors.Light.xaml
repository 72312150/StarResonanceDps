<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
        Overview:
        This resource dictionary defines the light-theme colors and brushes for each class.
        Resource keys follow the enum names declared in StarResonanceDpsAnalysis.WPF.ViewModels:
        - ShieldKnight       -> ClassesShieldKnightColor / ClassesShieldKnightBrush
        - HeavyGuardian      -> ClassesHeavyGuardianColor / ClassesHeavyGuardianBrush
        - Stormblade         -> ClassesStormbladeColor / ClassesStormbladeBrush
        - WindKnight         -> ClassesWindKnightColor / ClassesWindKnightBrush
        - FrostMage          -> ClassesFrostMageColor / ClassesFrostMageBrush
        - Marksman           -> ClassesMarksmanColor / ClassesMarksmanBrush
        - VerdantOracle      -> ClassesVerdantOracleColor / ClassesVerdantOracleBrush
        - SoulMusician       -> ClassesSoulMusicianColor / ClassesSoulMusicianBrush

        Usage:
        - Reference these brushes or colors in the UI to keep class theming consistent.
        - Avoid renaming resource keys to maintain alignment with code references.
    -->

    <!--  Unknown profession  -->
    <!--  Base lightness: A8 -->
    <Color x:Key="ClassesUnknownColor">#A8A8A8</Color>
    <SolidColorBrush x:Key="ClassesUnknownBrush" Color="{StaticResource ClassesUnknownColor}" />

    <!--  Shield Knight  -->
    <Color x:Key="ClassesShieldKnightColor">#FD938C</Color>
    <SolidColorBrush x:Key="ClassesShieldKnightBrush" Color="{StaticResource ClassesShieldKnightColor}" />

    <!--  Heavy Guardian  -->
    <Color x:Key="ClassesHeavyGuardianColor">#D1A362</Color>
    <SolidColorBrush x:Key="ClassesHeavyGuardianBrush" Color="{StaticResource ClassesHeavyGuardianColor}" />

    <!--  Stormblade  -->
    <Color x:Key="ClassesStormbladeColor">#BBAD3F</Color>
    <SolidColorBrush x:Key="ClassesStormbladeBrush" Color="{StaticResource ClassesStormbladeColor}" />

    <!--  Wind Knight  -->
    <Color x:Key="ClassesWindKnightColor">#81BE56</Color>
    <SolidColorBrush x:Key="ClassesWindKnightBrush" Color="{StaticResource ClassesWindKnightColor}" />

    <!--  Frost Mage  -->
    <Color x:Key="ClassesFrostMageColor">#3FCA89</Color>
    <SolidColorBrush x:Key="ClassesFrostMageBrush" Color="{StaticResource ClassesFrostMageColor}" />

    <!--  Marksman  -->
    <!--#D4D187-->
    <Color x:Key="ClassesMarksmanColor">#66B8D9</Color>
    <SolidColorBrush x:Key="ClassesMarksmanBrush" Color="{StaticResource ClassesMarksmanColor}" />

    <!--  Verdant Oracle  -->
    <Color x:Key="ClassesVerdantOracleColor">#A0A4F7</Color>
    <SolidColorBrush x:Key="ClassesVerdantOracleBrush" Color="{StaticResource ClassesVerdantOracleColor}" />

    <!--  Soul Musician  -->
    <Color x:Key="ClassesSoulMusicianColor">#CE97E0</Color>
    <SolidColorBrush x:Key="ClassesSoulMusicianBrush" Color="{StaticResource ClassesSoulMusicianColor}" />
</ResourceDictionary>